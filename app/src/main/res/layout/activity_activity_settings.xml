<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vimage.speedonhud2.ActivitySettings"
    android:background="#ff000102">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/analogModeString"
        android:id="@+id/switchAnalog"
        android:checked="true"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hudModeString"
        android:id="@+id/switchHud"
        android:checked="false"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/switchAnalog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screenOffString"
        android:id="@+id/switchScreenOff"
        android:layout_below="@+id/switchHud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
